<!doctype html>
<html>

<head>
    <%- include('partials/head'); %>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>

    <div>
        <header class="relative bg-indigo-400 w-full" x-data="{ isOpen: false }">
            <%- include('partials/header'); %>
        </header>

        <section class="w-full relative flex items-center justify-center h-screen">
            <img src="storage/dishlist.png" class="z-0 absolute h-full">
            <div class="z-10 text-center">
                <p class="text-xl font-medium tracking-wider text-gray-300">
                    <%=dish.dishMenu%>
                </p>
                <h2 class="mt-6 text-3xl font-bold text-white md:text-5xl">
                    <%=dish.dishName%>
                </h2>

                <div class="flex justify-center mt-8">
                    <p class="text-xl font-medium tracking-wider text-gray-300">
                        <%=dish.dishDescription%>
                    </p>
                </div>
            </div>
        </section>

        <section class="bg-white">
            <div class="ml-40 max-w-6xl px-6 py-16 mx-auto">

                <% for(x=0;x<ingredient.length;x++){%>
                    <div class="inline-block w-80 rounded overflow-hidden shadow-lg" style="height:30rem">
                        <img class="w-full" src="">
                        <div class="px-6 py-4">
                            <div class="font-bold text-xl mb-2">
                                <%=DI[x].amount%>
                                    <%=DI[x].measurement%>
                                        <%=ingredient[x].ingredientName%>
                            </div>
                            <p class="text-gray-700 text-base overflow-auto h-44 w-full">
                                <%=ingredient[x].ingredientDescription%>
                            </p>
                        </div>
                    </div>
                    <% } %>

            </div>
        </section>

        <footer class="border-t">
            <%- include('partials/footer'); %>
        </footer>
    </div>
</body>

</html>